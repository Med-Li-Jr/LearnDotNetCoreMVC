@model IEnumerable<LearnDotNetCoreMVC.Models.Entities.Organization>
@{
    ViewData["Title"] = "Request Page";
    string HasrError = (string)(ViewData["HasError"] ?? "false");
    string MessageResponse = (string)(ViewData["MessageResponse"] ?? "pas d'erreur");
}

<div class="main-content">
    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="#">Home</a>
                </li>
                <li class="active">Organisations</li>
            </ul><!-- /.breadcrumb -->

        </div>

        <div class="page-content">

            <div class="page-header">
                <h1>
                    Dashboard Organisations
                </h1>
            </div><!-- /.page-header -->

            <div class="row">
                <div class="col-xs-12">
                    <!-- PAGE CONTENT BEGINS -->
                    <!-- div.dataTables_borderWrap -->
                    @if (!HasrError.Equals("true"))
                    {
                        <div>
                            <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th>Email</th>
                                        <th>Account Type</th>
                                        <th class="hidden-480">Account Status</th>

                                        <th>Action</th>
                                    </tr>
                                </thead>

                                <tbody id="tbodyListeDemande">

                                    @{
                                        foreach (var organization in Model)
                                        {
                                            <tr>

                                                <td>
                                                    <a asp-route="detailOrganization" asp-route-id="@organization.Id">@organization.NameFr</a>
                                                </td>
                                                <td>
                                                    @organization.Email
                                                </td>

                                                <td class="hidden-480">
                                                    @if (organization.AccountType.Equals("client"))
                                                    {
                                                        <span class="label label-sm label-success">@organization.AccountType</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="label label-sm label-warning">@organization.AccountType</span>
                                                    }
                                                </td>
                                                <td class="hidden-480">
                                                    @if (organization.AccountStatus.Equals("active"))
                                                    {
                                                        <span class="label label-sm label-success">@organization.AccountStatus</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="label label-sm label-warning">@organization.AccountStatus</span>
                                                    }

                                                </td>
                                                <td>
                                                    <div>
                                                        <a class="blue" asp-route="detailOrganization" asp-route-id="@organization.Id">
                                                            <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                                        </a>
                                                        <a class="red" href="#"
                                                           onclick="deleteModal('@organization.Id')">
                                                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>

                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="error-container">
                            <div class="well">
                                <h1 class="grey lighter smaller">
                                    <span class="blue bigger-125">
                                        <i class="ace-icon fa fa-sitemap"></i>
                                    </span>
                                    @MessageResponse
                                </h1>

                                <hr />

                            </div>
                        </div>
                    }

                    <div id="modal-form-confirm-delete" class="modal" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="blue">Confirm Delete</h4>
                                </div>

                                <div class="modal-body">
                                    <div class="row">

                                        <div class="error-container">
                                            <div class="well">
                                                <h2 class="lighter smaller"> <span class="blue">Do you want to delete ?</span></h2>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                                <div class="modal-footer" id="footerModal">
                                    <form>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- PAGE CONTENT ENDS -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.page-content -->
    </div>
</div><!-- /.main-content -->


@section Scripts {
    <script type="text/javascript" src="~/js/Organizations/indexOrganization.js" defer></script>
}